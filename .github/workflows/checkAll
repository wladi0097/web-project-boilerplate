name: Node CI

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [12.x]

    steps:
    - uses: actions/checkout@v1
    - name: npm install
      run: npm ci
      env:
        CI: true
    - name: lint css
      run: npm lints
    - name: lint ts
      run: npm lintj
    - name: test
      run: npm test
    - name: build
      run: npm build
    
   
